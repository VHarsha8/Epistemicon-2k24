{
    "version": 2,
    "builds": [
        {
            "src": "api/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "src/**/*",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "rewrites": [
        { "source": "/api/events/(.*)", "destination": "/api/server.js" },
        { "source": "/(.*)", "destination": "/src/index.html" }
    ]
}
